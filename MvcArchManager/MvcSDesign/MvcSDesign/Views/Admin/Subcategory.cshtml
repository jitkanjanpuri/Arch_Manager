@model MvcSDesign.Models.SubcategoryModel


@{
    ViewBag.Title = "Subcategory";
    Layout = "~/Views/Shared/_NewAdmin.cshtml";


}

<!doctype html>
<html lang="en">

<head>
    <script src="~/angularjs/subcategory1.js"></script>
    <script type="text/javascript">

        function Reset() {
            document.getElementById("subcategoryName").value = 0;
            document.getElementById("lblError").innerText = ""
            document.getElementById("subcategoryName").value = "";

        }

        function Validation() {
            var name = document.getElementById("subcategoryName").value;

            document.getElementById("lblError").innerText = "";

            if (name.trim().length == 0) {
                document.getElementById("lblError").innerText = "Enter detail working subcategory";
                document.getElementById("subcategoryName").focus();
                return false;
            }
            return true;
        }

    </script>

</head>

@using (Html.BeginForm("Subcategory", "Admin", FormMethod.Post))
{
    <body>
        <div ng-app="myApp">
            <div ng-controller="myController">

                <div class="page-content">
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between mt-4">
                                    <div class="col-xl-3 col-md-2">
                                        <div class="form-group mb-3 ">
                                            <h4 class="mb-sm-0 font-size-18 mt-3">Detail Working Subcategory</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-body">
                                        <div>
                                            <div class="row">
                                                <span style="color:red;">  @ViewBag.message</span>
                                                <br />
                                                @Html.HiddenFor(x => x.subcategoryID)
                                               
                                                 
                                                <div class="col-xl-9 col-md-6">
                                                    <div class="form-group mb-3">
                                                        <label>Working Category	</label>
                                                        @Html.DropDownListFor(model => model.categoryID, Model.categoryList, new { @class = "form-control", placeholder = "Working Category" })
                                                    </div>
                                                </div>
                                                <div class="col-xl-9 col-md-6">
                                                    <div class="form-group mb-3">
                                                        <label>Detail Working Subcategory  </label>
                                                        @Html.TextBoxFor(model => model.subcategoryName, new { @class = "form-control", placeholder = "Detail Working Subcategory" })
                                                    </div>
                                                </div>

                                            </div>
                                            <div>
                                                <label id="lblError" class="text-danger"></label>
                                            </div>
                                            <div class="form-group">
                                                <button type="button" id="btnRest" onclick="Reset()" class="btn btn-info">Reset</button> &nbsp; &nbsp;
                                                <button type="submit" id="btnSubmit" class="btn btn-primary" onclick="return Validation();">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-lg-6">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-2 d-flex align-items-center">
                                        <span class="m-0 font-weight-bold text-primary">Detail Working Subcategory</span>
                                    </div>
                                     
                                    <div>
                                        <!--table start-->
                                        <div class="table-responsive">
                                            <table datatable="" class="table table-bordered table-hover datatable" ui-jq="dataTable" ui-options="dataTableOpt" id="registrationTable" width="100%" cellspacing="0">
                                                <thead class="bg-info text-white">
                                                    <tr>
                                                        <th>Working Category</th>
                                                        <th>Detail Working Subcategory</th>
                                                        <th>Action </th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="item in subcategorylist.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage))">

                                                        <th> {{item.categoryName}}    </th>
                                                        <td> {{item.subcategoryName}}</td>

                                                        <td>
                                                            <button type="button" class="btn btn-danger waves-effect" ng-click="ShowDelete(item.subcategoryID , item.subcategoryName)" style="width:40px;" data-bs-toggle="modal" data-bs-target=".bs-example-modal-center3">
                                                                <i class="fas fa-trash"></i>   <span class="text"></span>
                                                            </button>
                                                        </td>
                                                 </tbody>
                                            </table>
                                            View <select ng-model="viewby" ng-change="setItemsPerPage(viewby)"> <option>5</option><option>10</option><option>20</option><option>30</option><option>40</option><option>50</option></select> records at a time.
                                            <pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" class="pagination-sm" items-per-page="itemsPerPage"></pagination>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade bs-example-modal-center3" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">

                                    <div class="modal-body">

                                        <div class="modal-header">
                                            <h3 class="modal-title">Delete Subcategory</h3>
                                        </div>

                                        <br /><br />
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <span style="font-size:14pt;">  Are you want to delete <b>{{subcategoryName}}</b>  ? </span><br><br>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary waves-effect waves-light" data-bs-dismiss="modal" aria-label="Close">Close</button>
                                                &nbsp;&nbsp;
                                                <button type="button" class="btn btn-success waves-effect waves-light" ng-click="DeleteSubcategory()">Yes</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        @*<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>*@
        @if (ViewBag.message == "success")
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("Data successfully saved");
            }
            </script>
        }
    </body>
}
</html>

