@using (@Html.BeginForm())
{
    <div ng-app="myApp">
        <div ng-controller="myController" style="background-color:#f0f7fa">


            <div class="panel-group">
                <div class="panel panel-primary" style="margin-left: 50px; width:1000px; height:670px;">
                    <div class="panel-heading" style="font-family: Arial; font-size: 12pt;">Gmail </div>
                    <div class="panel-body" style="margin-top:-10px">
                        <table style="margin-left: 100px;width:80%; height:170px;">
                            <tr>
                                <td>
                                    <span style="height:30px;font-family:Museo Sans 300 ;font-size:12pt; color:black; font-weight:bold"> GMail ID</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" ng-model="txtGmailID" class="form-control" value="" style="width:250px;height:35px; font-family:Arial; font-size:10pt" />
                                </td>
                            </tr>
                            <tr>

                                <td>
                                    <span style="height:30px;font-family:Museo Sans 300 ;font-size:12pt; color:black;font-weight:bold  "> Password </span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" ng-model="txtPassword" class="form-control" value="" style="width:250px;height:35px; font-family:Arial; font-size:10pt" />
                                </td>
                            </tr>
                            <tr>

                                <td>
                                    <input type="button" class="btn btn-info" value="Submit" ng-click="Submit()" style="width:100px; font-family: Arial; font-size: 10pt;  " />
                                 
                                </td>
                                 
                            </tr>
                        </table>
                        <br />

                        <div class="card" style=" width: 740px;margin-left:50px;">
                            <div class="card-body">
                                   <div style="margin-left:10px;height: 365px; width: 500px; ">
                                    <table style="margin-left:2px; height: 365px; width:695px;  background-color:white " class="table table-striped">
                                        <thead>
                                            <tr style="font-family:Arial;font-size:10pt;height: 30px;     border: solid 1px #659EC7;">
                                                <th style="width:300px; font-family:Arial;font-size:11pt;">Gmail ID</th>
                                                <th style="width:300px;font-family:Arial;font-size:11pt;">Password </th>
                                                <th style="width:100px;font-family:Arial;font-size:11pt;">Delete </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in gmailList ">
                                                <td> <span style="font-family: Arial; font-size: 12pt; ">&nbsp;&nbsp;{{item.gmailID}} </span></td>
                                                <td> <span style="font-family: Arial; font-size: 12pt;">{{item.pwd}} </span></td>
                                                <td style="text-align:center">
                                                    <img src="~/Images/delete.png" ng-click="RemoveGMailAccount( item.id, item.gmailID)" style="width:40%; height:9%;" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>




}





