 
@model MvcSDesign.Models.CategoryModel
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_NewAdmin.cshtml";


}

<!doctype html>
<html lang="en">

<head>
 

    <script src="~/angularjs/category1.js"></script>
    <script type="text/javascript">

        function Reset() {
            document.getElementById("categoryName").value = "";
        }

        function Validation() {
            var name = document.getElementById("categoryName").value;
            document.getElementById("lblError").innerText = "";
            if (name.trim().length == 0) {
                document.getElementById("lblError").innerText = "Enter Cateogry name";
                document.getElementById("categoryName").focus();
                return false;
            }


            return true;
        }

    </script>

</head>

@using (Html.BeginForm("Category", "Admin", FormMethod.Post))
{
    <body>
        <div ng-app="myApp">
            <div ng-controller="myController">

                <div class="page-content">
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between mt-4">
                                    <div class="col-xl-3 col-md-2">
                                        <div class="form-group mb-3 ">
                                            <h4 class="mb-sm-0 font-size-18 mt-3">Category</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-body">
                                        <div>
                                            <div class="row">
                                                <span style="color:red;">  @ViewBag.message</span>
                                                @Html.HiddenFor(x => x.categoryID)
                                                <div class="col-xl-6 col-md-4">
                                                    <div class="form-group mb-3">
                                                        <label>Name </label>
                                                        @Html.TextBoxFor(model => model.categoryName, new { @class = "form-control", style = "", placeholder = "Category" })
                                                        @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div>
                                                <label id="lblError" class="text-danger"></label>
                                            </div>
                                            <div class="form-group">
                                                <button type="button" id="btnRest" onclick="Reset()" class="btn btn-info">Reset</button> &nbsp; &nbsp;
                                                <button type="submit" id="btnSubmit" class="btn btn-primary" onclick="return Validation();">Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-lg-6">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-2 d-flex align-items-center">
                                        <span class="m-0 font-weight-bold text-primary">Category List</span>
                                    </div>
                                     
                                    <div>
                                        <div class="table-responsive">
                                            <table datatable="" class="table table-bordered table-hover datatable" id="registrationTable" width="100%" cellspacing="0">
                                                <thead class="bg-warning text-white">
                                                    <tr>
                                                        <th>Category</th>
                                                        <th>Status</th>

                                                        <th>Action </th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="item in categorylist" ">

                                                        <th> {{item.categoryName}}    </th>
                                                        <td> {{item.status}}</td>
                                                        <td>
                                                            <button type="button" class="btn btn-danger waves-effect" ng-click="ShowDelete(item.staffID , item.name)" style="width:40px;" data-bs-toggle="modal" data-bs-target=".bs-example-modal-center3">
                                                                <i class="fas fa-trash"></i>   <span class="text"></span>
                                                            </button>
                                                        </td>
                                                    </tr> 
                                                </tbody>
                                            </table> 
                                        </div>
                                    </div> 
                                </div>
                            </div>
                        </div> 

                        <div class="modal fade bs-example-modal-center3" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">

                                    <div class="modal-body">

                                        <div class="modal-header">
                                            <h3 class="modal-title">Delete Category</h3>

                                        </div>

                                        <br /><br />
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <span style="font-size:14pt;">  Are you want to delete <b>{{designername}}</b>  ? </span><br><br>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary waves-effect waves-light" data-bs-dismiss="modal" aria-label="Close">Close</button>
                                                &nbsp;&nbsp;
                                                <button type="button" class="btn btn-success waves-effect waves-light" ng-click="RegistrationDelete()">Yes</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        @*<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>*@ 
        
   </body> 
}
</html>


