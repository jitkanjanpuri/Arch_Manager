 

@model MvcSDesign.Models.ClientInheritanceModel
<html>
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<head>


    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js"></script>
 
    <script src="~/angularjs/test.js"></script>
    


</head>

@using (@Html.BeginForm("Index", "Registration", FormMethod.Post))
{

<body>
    <div ng-app="myApp">
        <div ng-controller="myController">



            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <div class="row">
                                    <span style="color:red;">  @ViewBag.message</span>

                                    <div class="col-xl-6 col-md-6">
                                        <div class="form-group mb-3">
                                            <label>Address  </label>
                                            @Html.TextBoxFor(model => model.clientName, new { @class = "form-control", placeholder = "Addresss" })
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-md-4">
                                        <div class="form-group mb-3">
                                            <label> City   </label>
                                            @Html.TextBoxFor(model => model.city, new { @class = "form-control", placeholder = " Father Name" })
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-md-6">
                                        <div class="form-group mb-3">
                                            <label>Address  </label>
                                            @Html.TextBoxFor(model => model.address, new { @class = "form-control", placeholder = "Addresss" })
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-md-6">
                                        <div class="form-group mb-3">
                                            <label>Address  </label>
                                            @Html.TextBoxFor(model => model.amount, new { @class = "form-control", placeholder = "Addresss" })
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <label id="lblError" class="text-danger"></label>
                                </div>
                                <div class="form-group">
                                    <button type="button" id="btnRest" onclick="Reset()" class="btn btn-info">Reset</button> &nbsp; &nbsp;
                                    <button type="submit" id="btnSubmit" class="btn btn-primary" onclick="return Validation();">Save</button>
                                </div>
                            </div>

                            <div>
                                <!--table start-->
                                <div class="table-responsive">
                                    <table datatable="" class="table table-bordered table-hover datatable" ui-jq="dataTable" ui-options="dataTableOpt" id="registrationTable" width="100%" cellspacing="0">
                                        <thead class="bg-warning text-white">
                                            <tr>
                                                
                                                <th>Name</th>
                                                <th>Address</th>
                                                <th>City</th>
                                                <th>Amount</th>
                                              

                                            </tr>
                                        </thead>
                                        <tbody>


                                            <tr ng-repeat="item in reglist">
                                               
                                                <th> {{item.clientName}}    </th>
                                                <td> {{item.address}}</td>
                                                <td> {{item.city}} </td>
                                                <td>
                                                    {{item.amount}}
                                                </td>
                                                 

                                               
                                        </tbody>
                                    </table>
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
      </div>
           

     

</body>

}
</html>
 