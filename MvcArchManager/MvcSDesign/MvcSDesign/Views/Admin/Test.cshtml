    <script>
        function IsNumeric(evt) {
            var iKeyCode = (evt.which) ? evt.which : evt.keyCode
            if (iKeyCode != 46 && iKeyCode > 31 && (iKeyCode < 48 || iKeyCode > 57))
                return false;

            return true;
        }
        function validationCheck() {

            var name = document.getElementById("name").value;
            var username = document.getElementById("username").value;
            var password = document.getElementById("password").value;
            var cellNo = document.getElementById("cellNo").value;
            var countryCode = document.getElementById("countryCode").value;

            var whatsappno = document.getElementById("whatsappno").value;
            var gmailID = document.getElementById("gmailID").value;
            var gmailPassword = document.getElementById("gmailPassword").value;

            var reg = /^[_a-z0-9-]+(\.[_a-z0-9-]+)*@@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/;

            if (name.length == 0) {
                alert("Please enter name");
                return false;
            }
            else if ((cellNo == "") || (cellNo.length == 0)) {
                alert("Please enter cell no");
                document.getElementById("name").focus();
                return false;
            }
            else if ((cellNo == "") || (cellNo.length < 10)) {
                alert("Please enter 15 digit cell no");
                document.getElementById("cellNo").focus();
                return false;
            }
            else if ((username == "") || (username.length == 0)) {
                alert("Please enter user name");
                document.getElementById("username").focus();
                return false;
            }
            else if (username.length < 4) {
                alert("Please enter atleast 4 character user name");
                document.getElementById("username").focus();
                return false;
            }
            else if ((password == "") || (password.length == 0)) {
                alert("Please enter password");
                document.getElementById("password").focus();
                return false;
            }
            else if (password.length < 4) {
                alert("Please enter atleast 4 character password");
                document.getElementById("password").focus();
                return false;
            }


            else if ((countryCode == "") || (countryCode.length == 0)) {
                alert("Please enter country code ");
                document.getElementById("countryCode").focus();
                return false;
            }
            else if ((whatsappno == "") || (whatsappno.length == 0) || (whatsappno.length < 10)) {
                alert("Please enter digit WhatsApp no ");
                document.getElementById("whatsappno").focus();
                return false;
            }
            else if (gmailID.length == 0) {
                alert("Please enter GMail ID");
                document.getElementById("gmailID").focus();
                return false;
            }

            else if (gmailPassword.length == 0) {
                alert("Please enter GMail password");
                document.getElementById("gmailPassword").focus();
                return false;
            }

            if (!isValidEmailAddress(gmailID)) {
                alert("Invalid email ID");
                return false;
            }
            return true;
        }

        function isValidEmailAddress(emailAddress) {
            var pattern = /^[_a-z0-9-]+(\.[_a-z0-9-]+)*@@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/;

            return pattern.test(emailAddress);
        }
    </script>



