                    success: function () {
                        alert("Quation successfully saved");
                        window.location.reload();
                    },
                    error: function () {
                        alert("Quation successfully saved");
                        window.location.reload();
                    }
                });
            });
        });
    </script>


    <script type="text/javascript">
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }



        function closeWin() {
            window.close();
        }

