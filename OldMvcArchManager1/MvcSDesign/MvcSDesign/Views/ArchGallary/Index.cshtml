@model MvcSDesign.Models.registration

@{
    ViewBag.Title = "Index";
}

 

<!DOCTYPE html>

<head>

    <title></title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css.map" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>


    @section Scripts {

        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/cssjqryUi")
        @Scripts.Render("~/bundles/jqueryval")



        <script type="text/javascript">
            $(document).ready(function () {

                 




            });

        </script>

    }
    <style type="text/css">
        .myButtonAdd {
            -moz-box-shadow: 0px 1px 0px 0px #f0f7fa;
            -webkit-box-shadow: 0px 1px 0px 0px #f0f7fa;
            box-shadow: 0px 1px 0px 0px #f0f7fa;
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #1E90FF), color-stop(1, #1E90FF));
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#33bdef', endColorstr='#019ad2',GradientType=0);
            background-color: #1E90FF;
            -moz-border-radius: 6px;
            -webkit-border-radius: 6px;
            border-radius: 6px;
            border: 1px solid #1E90FF;
            display: inline-block;
            cursor: pointer;
            color: #ffffff;
            font-family: Arial;
            font-size: 15px;
            font-weight: bold;
            padding: 6px 24px;
            text-decoration: none;
            text-shadow: 0px -1px 0px #1E90FF;
        }

            .myButtonAdd:hover {
                background: -webkit-gradient(linear, left top, left bottom, color-stop(0.05, #1E90FF), color-stop(1, #1E90FF));
                filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#019ad2', endColorstr='#33bdef',GradientType=0);
                background-color: #1E90FF;
            }

            .myButtonAdd:active {
                position: relative;
                top: 1px;
            }



        .myClass {
            background-color: #E8F8F5;
            display: none;
        }
    </style>
</head>

@using (@Html.BeginForm())
{
    <br /><br />

    <div class="container">
        <div id="loginbox" style="margin-top:20px; width:400px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" style=" width:400px;">
                <div class="panel-heading" style="">
                    <div class="panel-title"> <span style=" font-weight:bold;">  Registration </span></div>
                </div>


                <div class="form-group" style="margin-left:20px;">
                    <label for="name" class="cols-sm-2 control-label" style="font-family:Arial; font-size:10pt;  margin-left:5px; ">Name</label>
                    <div class="cols-sm-10">
                        <div class="input-group" >
                            <span class="input-group-addon" style="width:35px;"><i class="fa fa-user fa" aria-hidden="true" style="font-size:16pt"></i></span>
                            @Html.TextBoxFor(a => a.name, new { @class = "form-control", style = "font-family:Arial; font-size:10pt; width:200px;height:35px" })

                        </div>
                    </div>
                    <div style="font-family:Arial; font-size:10pt;   margin-left:30px;color:red; ">
                        @Html.ValidationMessageFor(a => a.name)
                    </div>

                </div>


                <div class="form-group" style="margin-left:20px;">
                    <label for="name" class="cols-sm-2 control-label" style="font-family:Arial; font-size:10pt; margin-left:5px; ">Company name</label>
                    <div class="cols-sm-10">
                        <div class="input-group" >
                            <span class="input-group-addon" style="width:35px;"><i class="fa fa-address-book fa" aria-hidden="true" style="font-size:16pt"> </i></span>
                            @Html.TextBoxFor(a => a.companyname, new { @class = "form-control",  style = "font-family:Arial; font-size:10px; width:200px;height:35px  " })

                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-left:20px;">
                    <label for="name" class="cols-sm-2 control-label" style="font-family:Arial; font-size:10pt;  margin-left:5px; ">Profession</label>
                    <div class="cols-sm-10">
                        <div class="input-group"  >
                            <span class="input-group-addon" style="width:35px;"><i class="fa fa-address-book fa" aria-hidden="true" style="font-size:16pt"></i></span>
                            @Html.DropDownListFor(a => a.profession, new SelectList(Model.professionlist,"Value", "Text", ViewBag.selectedItem)  ,new { @class = "form-control", style = "font-family:Arial; font-size:10pt; width:200px;height:35px" })
                             
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-left:20px;">
                    <label for="name" class="cols-sm-2 control-label" style="font-family:Arial; font-size:10pt;   margin-left:5px; ">Mobile no</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon" style="width:35px;"><i class="fa fa-phone-square" aria-hidden="true" style="font-size:16pt"></i></span>
                            @Html.TextBoxFor(a => a.mobileno, new { @class = "form-control", style = "font-family:Arial; font-size:10pt; width:200px;height:35px" })

                        </div>
                    </div>
                    <div style="font-family:Arial; font-size:10pt; margin-left:30px;color:red; ">
                        @Html.ValidationMessageFor(a => a.mobileno)
                    </div>
                </div>

                <div class="form-group" style="margin-left:20px;">
                    <label for="name" class="cols-sm-2 control-label" style="font-family:Arial; font-size:10pt;  margin-left:5px; ">E-mail ID</label>
                    <div class="cols-sm-10">
                        <div class="input-group"  >
                            <span class="input-group-addon" style="width:35px;"><i class="fa fa-envelope" aria-hidden="true" style="font-size:16pt"></i></span>
                            @Html.TextBoxFor(a => a.emailID, new { @class = "form-control", style = "font-family:Arial; font-size:12px; width:200px;height:35px" })

                        </div>
                    </div>
                    <div style="font-family:Arial; font-size:10pt;  margin-left:30px;color:red; ">
                        @Html.ValidationMessageFor(a => a.emailID)
                    </div>
                </div>

                

                <div class="form-group" style="margin-left:20px;">
                    <label for="name" class="cols-sm-2 control-label" style="font-family:Arial; font-size:10pt;  margin-left:5px; ">Password</label>
                    <div class="cols-sm-10">
                        <div class="input-group" >
                            <span class="input-group-addon" style="width:35px;"><i class="fa fa-user fa" aria-hidden="true" style="font-size:16pt"></i></span>
                            @Html.PasswordFor(a => a.pwd, new { @class = "form-control", style = "font-family:Arial; font-size:10pt; width:100px;height:35px" })
                        </div>
                    </div>
                    <div style="font-family:Arial; font-size:10pt;  margin-left:30px;color:red; ">
                        @Html.ValidationMessageFor(a => a.pwd)
                    </div>
                </div>




                <div class="form-group" style="margin-left:50px;">
                    <input type="submit" value="Submit" class="myButtonAdd" style=" width:340px;font-family:Arial; font-size:14px;  " />
                </div>
            </div>
        </div>
    </div>


}

